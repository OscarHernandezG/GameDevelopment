<!-- Config file for the game -->

<config>
  <app>
    <title>Factory Escape</title>
    <organization>UPC</organization>
    <save_game>save_game.xml</save_game>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1251" height="704" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
    <music level ="audio/music/Urban-Jungle-2061_Looping.ogg"></music>
  </map>

  <scene>
    <maps map ="Map1.tmx"></maps>
    <maps map ="Map2.tmx"></maps>
  </scene>

  <audio>
    <volume music = "0.01"></volume>
  </audio>

</config>